<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent50"
    android:padding="@dimen/househ_root_layout_padding">

    <RelativeLayout
        android:id="@+id/ll_direct_call"
        android:layout_width="@dimen/househ_option_back_layout_size"
        android:layout_height="@dimen/househ_option_back_layout_size"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/househ_option_back_layout_margin"
        android:background="@drawable/linear_circle_bgd"
        android:clickable="true">

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/iv_direct_call"
            android:layout_width="@dimen/househ_option_icon_size"
            android:layout_height="@dimen/househ_option_icon_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:iiv_color="@color/md_white_1000"
            app:iiv_icon="gmd-call" />

        <TextView
            android:id="@+id/txt_direct_call"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@id/iv_direct_call"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/househ_option_text_margin_top"
            android:text="@string/txt_househ_direct_call"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/househ_option_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_msg_chat"
        android:layout_width="@dimen/househ_option_back_layout_size"
        android:layout_height="@dimen/househ_option_back_layout_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/househ_option_back_layout_margin"
        android:background="@drawable/linear_circle_bgd"
        android:clickable="true"
        android:padding="-10dp">

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/iv_msg_chat"
            android:layout_width="@dimen/househ_option_icon_size"
            android:layout_height="@dimen/househ_option_icon_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:iiv_color="@color/md_white_1000"
            app:iiv_icon="faw_commenting_o" />

        <TextView
            android:id="@+id/txt_msg_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_msg_chat"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/househ_option_text_margin_top"
            android:text="@string/txt_househ_leave_msg"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/househ_option_text_size" />
    </RelativeLayout>
</RelativeLayout>