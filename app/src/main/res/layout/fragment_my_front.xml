        <LinearLayout
            android:id="@+id/ll_shequhuodong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_messages"
            android:layout_marginTop="@dimen/front_item_margin_top"
            android:orientation="vertical">

           </LinearLayout>
    </RelativeLayout>
</zgan.ohos.ConstomControls.ScrollViewWithCallBack>

