<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/solid_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_expressname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="asdfa "
            android:textSize="@dimen/toolbar_title_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/express_in_p" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/icon_base_color"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/expressin_item_height"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_expressl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/expressin_l" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_expressl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_expressnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdf "
                android:textSize="@dimen/expressin_first_line_size" />

            <TextView
                android:id="@+id/txt_expressintime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdf a"
                android:textSize="@dimen/expressin_second_line_size" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/icon_base_color"></LinearLayout>
</LinearLayout>