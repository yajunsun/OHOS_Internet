<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rect_border"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:transitionName="content"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="6dp"
        android:text="阿里的范范"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/front_text_size" />
    <TextView
        android:id="@+id/txt_pub_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-04-12"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/txt_content"
        android:textColor="@color/shishiwuye_sm_txt_color"
        android:textSize="@dimen/front_text_size" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/l1"
        android:layout_marginTop="5dp"
        android:layout_below="@id/txt_pub_time"
        android:background="@color/icon_base_color"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_communityname"
        android:layout_below="@id/l1"
        android:textSize="@dimen/front_text_size"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txt_communityname"
        android:layout_alignBottom="@id/txt_communityname"
        android:text="二栋二单元10-2"
        android:layout_below="@id/l1"
        android:id="@+id/txt_houser"
        android:textSize="@dimen/front_text_size"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />
</RelativeLayout>