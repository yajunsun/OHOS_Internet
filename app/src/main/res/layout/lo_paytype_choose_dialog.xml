<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/solid_white"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtchoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择支付方式" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:id="@+id/txt_paymount"
            android:gravity="right"
            android:text="300" />
    </LinearLayout>

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_hdfk"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pay_huodaofukuan" />

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_alipay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pay_zhifubao" />

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_wallite"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pay_qianbao" />

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_wxpay"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pay_weixin" />
</LinearLayout>